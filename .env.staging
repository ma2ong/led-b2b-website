# LED B2B网站测试环境配置

# 应用配置
NODE_ENV=staging
PORT=3000
NEXT_PUBLIC_API_URL=https://staging.led-displays.com/api

# 数据库配置
DATABASE_URL=postgresql://postgres:staging_password@postgres:5432/led_b2b_staging
POSTGRES_DB=led_b2b_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password

# Redis配置
REDIS_URL=redis://:staging_redis_password@redis:6379
REDIS_PASSWORD=staging_redis_password

# JWT配置
JWT_SECRET=staging_jwt_secret_key
JWT_EXPIRES_IN=1d

# 邮件服务配置
EMAIL_SERVICE_API_KEY=staging_email_api_key
EMAIL_FROM=noreply@staging.led-displays.com
EMAIL_REPLY_TO=dev@led-displays.com

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf

# 安全配置
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=200

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=pretty

# CDN配置
CDN_URL=https://staging-cdn.led-displays.com
STATIC_URL=https://staging-static.led-displays.com

# 第三方服务配置
GOOGLE_ANALYTICS_ID=GA_STAGING_ID
GOOGLE_TAG_MANAGER_ID=GTM_STAGING_ID

# 通知配置
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
EMAIL_NOTIFICATION=dev@led-displays.com

# 备份配置
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=led-b2b-staging-backups

# 监控配置
GRAFANA_PASSWORD=staging_grafana_password