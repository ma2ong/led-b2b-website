# 网站基础配置
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Lejin LED Display"

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/led_website"
REDIS_URL="redis://localhost:6379"

# 认证配置
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# 邮件服务配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# 文件存储配置
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="led-website-assets"

# 第三方服务配置
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# 社交媒体配置
WHATSAPP_NUMBER="+8613800138000"
WECHAT_QR_CODE="/images/wechat-qr.png"

# 开发环境配置
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"

# API配置
API_BASE_URL="http://localhost:3000/api"
API_TIMEOUT=10000

# 缓存配置
CACHE_TTL=3600
REDIS_TTL=7200

# 安全配置
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 监控配置
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info"