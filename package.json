{
  "name": "led-b2b-website",
  "version": "1.0.0",
  "description": "Professional LED Display B2B Website for Shenzhen Lejin Optoelectronics",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration,e2e",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e:headless",
    "db:setup:test": "echo 'Setting up test database...'",
    "cypress:install": "cypress install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "3.3.2",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.16",
    "bcryptjs": "^3.0.2",
    "clsx": "2.0.0",
    "framer-motion": "10.16.16",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "0.303.0",
    "next": "14.0.4",
    "next-i18next": "15.2.0",
    "postcss": "8.4.32",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.48.2",
    "react-query": "3.39.3",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3",
    "zod": "3.22.4",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/jest-dom": "6.1.6",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "cypress": "13.6.2",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
